@model GameCell

<div dir="auto" data-game_id="@Model.ProjectId" class="game_cell has_cover">
    <div class="game_thumb">
        <a tabindex="-1" data-action="game_grid" class="thumb_link game_link" asp-area="Blog" asp-controller="ProjectPage" asp-action="Details" asp-route-id="@Model.ProjectId" data-label="">
            <img width="315" class="lazy_loaded" height="250" src="@Model.CoverImage">
        </a>
    </div>
    <div class="game_cell_data">
        <div class="game_title">
            <a class="title game_link" data-action="game_grid" asp-area="Blog" asp-controller="ProjectPage" asp-action="Details" asp-route-id="@Model.ProjectId" data-label="">@Model.Title</a>
        </div>
        <div class="game_text" title="@Model.ShortDescription">@Model.ShortDescription</div>
        <div class="game_author">
            <a asp-area="Blog" asp-controller="ProjectPage" asp-action="CreatorPage" asp-route-creatorId="@Model.CreatorID">@Model.CreatorName</a>
        </div>
        <div class="game_genre">@Model.GenreName</div>
        <div class="game_platform">
            <i class="fa-brands fa-@(Model.PlatformName)"></i>
        </div>
    </div>
</div>

