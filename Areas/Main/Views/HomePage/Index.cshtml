@model AspMVC.Areas.Main.Models.HomePageViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="index_page page_widget base_widget" id="index">
    <div class="sidebar_shroud"></div>
    <!-- sidebar -->
    <div class="index_sidebar">
        <div class="scrolling_content">
            <div class="sidebar_browse">
                <section class="sidebar_browse_group">
                    <h2>Popular Tags</h2>
                    <div class="browse_filters">
                        <a asp-action="Browse" asp-route-genre="horror">Horror games</a>
                        <a asp-action="Browse" asp-route-genre="action">Action games</a>
                        <a asp-action="Browse" asp-route-sort="most-popular">Popular games</a>
                        <a asp-action="Browse" asp-route-sort="most-recent">Latest games</a>
                        <a asp-action="Browse" asp-route-platform="platform-windows">Games for Windows</a>
                        <a asp-action="Browse" asp-route-platform="platform-android">Games for Android</a>
                    </div>
                </section>
                <section class="sidebar_browse_group">
                    <h2>Browse</h2>
                    <div class="browse_filters">
                        <a asp-area="Main" asp-controller="HomePage" asp-action="Browse" data-action="browse" title="Browse Games" data-label="game">Games</a>
                        <a title="Randomizer" asp-area="Blog" asp-controller="ProjectPage" asp-action="ProjectRandomizer">
                            <span class="icon icon-shuffle"></span>
                            <span class="text">Randomizer</span>
                        </a>
                    </div>
                </section>
                <section class="sidebar_browse_group">
                    <h2>Games by price</h2>
                    <div class="browse_filters">

                        <a data-action="browse" data-label="free" title="Browse free games" asp-action="Browse" asp-route-price="free">Free games</a>

                    </div>
                </section>
            </div>

        </div>
    </div>


    <div class="main_column">
        <div class="grid_groups">
            <section class="game_section">
                <div class="section_header">
                    <h2>Featured Games</h2>
                    <a href="/games/new-and-popular/featured" class="button outline forward_link">View all</a>
                </div>
                <div id="featured_game_grid" class="featured_game_grid_widget base_widget">
                    @foreach (var item in Model.featured)
                    {
                        await Html.RenderPartialAsync("~/Areas/Main/Views/Shared/_mainPageGameCell.cshtml", item);

                    }
                </div>
            </section>
            <section class="game_section">
                <div class="section_header">
                    <h2>Fresh Games</h2>
                    <a asp-action="Browse" asp-route-sort="most-recent" class="button outline forward_link">View more</a>
                </div>
                <div id="featured_game_grid" class="featured_game_grid_widget base_widget">
                    @foreach (var item in Model.lastest)
                    {
                        await Html.RenderPartialAsync("~/Areas/Main/Views/Shared/_mainPageGameCell.cshtml", item);

                    }
                </div>
            </section>
            <section class="game_section">
                <div class="section_header">
                    <h2>Recent Popular</h2>
                    <a asp-action="Browse" asp-route-sort="most-recent" class="button outline forward_link">View more</a>
                </div>
                <div id="featured_game_grid" class="featured_game_grid_widget base_widget">
                    @foreach (var item in Model.recentPopuplar)
                    {
                        await Html.RenderPartialAsync("~/Areas/Main/Views/Shared/_mainPageGameCell.cshtml", item);

                    }
                </div>
            </section>
            <section class="game_section">
                <div class="section_header">
                    <h2>Recent High rated</h2>
                    <a asp-action="Browse" asp-route-sort="most-recent" class="button outline forward_link">View more</a>
                </div>
                <div id="featured_game_grid" class="featured_game_grid_widget base_widget">
                    @foreach (var item in Model.recentHighrated)
                    {
                        await Html.RenderPartialAsync("~/Areas/Main/Views/Shared/_mainPageGameCell.cshtml", item);

                    }
                </div>
            </section>



        </div>
        <div class="see_all_games">
            <strong>Don't see anything you like?</strong>
            <a asp-area="Main" asp-controller="HomePage" asp-action="Browse" class="button outline">
                View all games <span class="icon icon-arrow-right"></span>
            </a>
            <a data-action="footer" data-label="randomizer" href="/randomizer" class="button outline">
                View something random <span class="icon icon-shuffle"></span>
            </a>
        </div>
    </div>


    <script type="text/template" id="loading_lightbox_tpl">
        <div aria-live="polite" class="lightbox loading_lightbox">
            <div class="loader_outer">
                <div class="loader_label">Loading</div>
                <div class="loader_bar">
                    <div class="loader_bar_slider"></div>
                </div>
            </div>
        </div>
    </script>
    <script type="text/javascript">
        init_Index('#index', {
            "recs_count": 16
        });

    </script>

</div>