@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Lấy lại mật khẩu?";
    Layout = "~/Areas/Identity/Views/Account/_LoginLayout.cshtml";

}
<div class="row justify-content-center">
    <div class="col-lg-5">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">Password Recovery</h3></div>
            <div class="card-body">
                <div class="small mb-3 text-muted">Enter your email address and we will send you a link to reset your password.</div>
                <form asp-controller="Account" asp-action="ForgotPassword" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" type="email" placeholder="name@example.com" />
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                        <a asp-area="Identity" asp-controller="Account" asp-action="Login">Have an account? Go to login</a>
                        <button type="submit" class="btn btn-primary">Send</button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center py-3">
                <div class="small">
                    <a asp-area="Identity" asp-controller="Account" asp-action="Register">Have an account? Go to login</a>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
