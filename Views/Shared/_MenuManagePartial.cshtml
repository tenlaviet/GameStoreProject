@using Microsoft.AspNetCore.Identity
@inject UserManager<AppUser> userManager
@{
    string username = "";
    string userid = "";
    bool isAdmin = false;
    if (User.Identity.IsAuthenticated)
    {
        if(this.User.IsInRole("Administrator"))
        {
            isAdmin = true;
        }
        else
        {
            isAdmin = false;
        }
        userid = userManager.GetUserId(User);
        username = userManager.GetUserName(User);
    }

}
<div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false">
        Dropdown button
    </button>
    <ul class="dropdown-menu">
        @{
            if(isAdmin)
            {
                <a class="dropdown-item" asp-action="Index" asp-controller="Genre" asp-area="Admin">
                    Genres Manage
                </a>
                <a class="dropdown-item" asp-action="Index" asp-controller="Tag" asp-area="Admin">
                    Tag Manager
                </a>
                <a class="dropdown-item" asp-action="Index" asp-controller="Manage" asp-area="Identity">
                    Manage User(admin)
                </a>
                <a class="dropdown-item" asp-action="Index" asp-controller="Role" asp-area="Identity">
                    Manage Role(Admin)
                </a>
            }
        }
        <li>
            <a class="dropdown-item" asp-area="Blog" asp-controller="ProjectPage" asp-action="Index">
                Dashboard
            </a>
        </li>
        <li><hr class="dropdown-divider"></li>
        <li><h6 class="dropdown-header">Dropdown header</h6></li>
        <li><hr class="dropdown-divider"></li>
        <li>
            <a class="dropdown-item" asp-action="Index" asp-controller="Manage" asp-area="Identity">
                View Profile
            </a>
        </li>
 
    </ul>
</div>

